---
// Ornamental toggle for switching between Professional and Personal modes
---

<div class="mode-toggle-container">
  <!-- Decorative left ornament -->
  <svg class="ornament ornament-left" width="24" height="24" viewBox="0 0 24 24" fill="none">
    <circle cx="12" cy="12" r="8" stroke="currentColor" stroke-width="1" opacity="0.4"/>
    <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="1" opacity="0.6"/>
    <circle cx="12" cy="12" r="2" fill="currentColor" opacity="0.8"/>
    <line x1="12" y1="4" x2="12" y2="6" stroke="currentColor" stroke-width="1" opacity="0.5"/>
    <line x1="12" y1="18" x2="12" y2="20" stroke="currentColor" stroke-width="1" opacity="0.5"/>
    <line x1="4" y1="12" x2="6" y2="12" stroke="currentColor" stroke-width="1" opacity="0.5"/>
    <line x1="18" y1="12" x2="20" y2="12" stroke="currentColor" stroke-width="1" opacity="0.5"/>
  </svg>

  <!-- Main toggle -->
  <div class="mode-toggle" role="switch" aria-label="Toggle between professional and personal mode" tabindex="0">
    <div class="toggle-track">
      <!-- Background pattern -->
      <svg class="track-pattern" preserveAspectRatio="none" viewBox="0 0 200 40">
        <defs>
          <pattern id="diamond-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
            <path d="M10,0 L20,10 L10,20 L0,10 Z" fill="currentColor" opacity="0.05"/>
          </pattern>
        </defs>
        <rect width="200" height="40" fill="url(#diamond-pattern)"/>
      </svg>

      <!-- Sliding indicator -->
      <div class="toggle-indicator"></div>

      <!-- Labels -->
      <button class="toggle-option toggle-professional" data-mode="professional">
        <span class="option-icon">⚙</span>
        <span class="option-label">Professional</span>
      </button>

      <button class="toggle-option toggle-personal" data-mode="personal">
        <span class="option-icon">✦</span>
        <span class="option-label">Personal</span>
      </button>
    </div>
  </div>

  <!-- Decorative right ornament -->
  <svg class="ornament ornament-right" width="24" height="24" viewBox="0 0 24 24" fill="none">
    <circle cx="12" cy="12" r="8" stroke="currentColor" stroke-width="1" opacity="0.4"/>
    <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="1" opacity="0.6"/>
    <circle cx="12" cy="12" r="2" fill="currentColor" opacity="0.8"/>
    <line x1="12" y1="4" x2="12" y2="6" stroke="currentColor" stroke-width="1" opacity="0.5"/>
    <line x1="12" y1="18" x2="12" y2="20" stroke="currentColor" stroke-width="1" opacity="0.5"/>
    <line x1="4" y1="12" x2="6" y2="12" stroke="currentColor" stroke-width="1" opacity="0.5"/>
    <line x1="18" y1="12" x2="20" y2="12" stroke="currentColor" stroke-width="1" opacity="0.5"/>
  </svg>
</div>

<script>
  // Get site mode from URL parameter or default to 'personal'
  function getSiteMode(): 'professional' | 'personal' {
    if (typeof window !== 'undefined') {
      const params = new URLSearchParams(window.location.search)
      const mode = params.get('mode')
      if (mode === 'personal' || mode === 'professional') {
        return mode
      }
    }
    return 'personal'
  }

  // Set site mode and update URL parameter
  function setSiteMode(mode: 'professional' | 'personal') {
    if (typeof window !== 'undefined') {
      const url = new URL(window.location.href)
      url.searchParams.set('mode', mode)
      window.history.pushState({}, '', url.toString())
    }

    // Dispatch custom event for other components
    document.dispatchEvent(
      new CustomEvent('mode-change', {
        detail: { mode }
      })
    )

    // Professional mode = dark theme, Personal mode = light theme
    const theme = mode === 'professional' ? 'dark' : 'light'
    document.dispatchEvent(
      new CustomEvent('theme-change', {
        detail: { theme }
      })
    )
  }

  // Update toggle UI
  function updateToggleUI(mode: 'professional' | 'personal') {
    const toggle = document.querySelector('.mode-toggle')
    const professional = document.querySelector('.toggle-professional')
    const personal = document.querySelector('.toggle-personal')

    if (toggle) {
      if (mode === 'personal') {
        toggle.classList.add('personal-mode')
        toggle.setAttribute('aria-checked', 'true')
      } else {
        toggle.classList.remove('personal-mode')
        toggle.setAttribute('aria-checked', 'false')
      }
    }

    // Update active states
    if (professional && personal) {
      professional.classList.toggle('active', mode === 'professional')
      personal.classList.toggle('active', mode === 'personal')
    }
  }

  // Handle toggle click
  function handleToggleClick(newMode: 'professional' | 'personal') {
    setSiteMode(newMode)
    updateToggleUI(newMode)
  }

  // Handle browser back/forward navigation
  function handlePopState() {
    const mode = getSiteMode()
    updateToggleUI(mode)
    // Dispatch mode change event to update other components
    document.dispatchEvent(
      new CustomEvent('mode-change', {
        detail: { mode }
      })
    )
  }

  // Initialize on page load
  function initModeToggle() {
    const mode = getSiteMode()
    updateToggleUI(mode)

    // Set theme to match mode on init
    const theme = mode === 'professional' ? 'dark' : 'light'
    document.dispatchEvent(
      new CustomEvent('theme-change', {
        detail: { theme }
      })
    )

    // Add click handlers to options
    const professional = document.querySelector('.toggle-professional')
    const personal = document.querySelector('.toggle-personal')

    if (professional) {
      professional.addEventListener('click', (e) => {
        e.stopPropagation()
        handleToggleClick('professional')
      })
    }

    if (personal) {
      personal.addEventListener('click', (e) => {
        e.stopPropagation()
        handleToggleClick('personal')
      })
    }

    // Keyboard support for the toggle container
    const toggle = document.querySelector('.mode-toggle')
    if (toggle) {
      toggle.addEventListener('keydown', (e) => {
        if ((e as KeyboardEvent).key === 'Enter' || (e as KeyboardEvent).key === ' ') {
          e.preventDefault()
          const currentMode = getSiteMode()
          const newMode = currentMode === 'professional' ? 'personal' : 'professional'
          handleToggleClick(newMode)
        }
      })
    }

    // Listen for browser back/forward
    window.addEventListener('popstate', handlePopState)
  }

  // Set up on page load
  document.addEventListener('DOMContentLoaded', initModeToggle)

  // Handle Astro view transitions
  document.addEventListener('astro:page-load', initModeToggle)

  // Listen for mode changes from other components (like the flip)
  document.addEventListener('mode-change', (e: Event) => {
    const customEvent = e as CustomEvent
    const mode = customEvent.detail?.mode
    if (mode) {
      updateToggleUI(mode)
    }
  })
</script>

<style>
  .mode-toggle-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
    opacity: 0;
    animation: fadeInDown 0.8s ease-out 0.2s forwards;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ornament {
    color: hsl(var(--gold));
    animation: rotateOrnament 20s linear infinite;
  }

  .ornament-left {
    animation-direction: normal;
  }

  .ornament-right {
    animation-direction: reverse;
  }

  @keyframes rotateOrnament {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .mode-toggle {
    position: relative;
    cursor: pointer;
    user-select: none;
    transition: transform 0.2s ease;
  }

  .mode-toggle:hover {
    transform: scale(1.02);
  }

  .mode-toggle:focus {
    outline: 2px solid hsl(var(--gold));
    outline-offset: 4px;
    border-radius: 2rem;
  }

  .toggle-track {
    position: relative;
    width: 280px;
    height: 48px;
    background: linear-gradient(
      135deg,
      hsl(var(--background)),
      hsl(var(--muted) / 0.3)
    );
    border: 1.5px solid hsl(var(--bronze) / 0.3);
    border-radius: 2rem;
    overflow: hidden;
    box-shadow:
      inset 0 2px 8px rgba(0, 0, 0, 0.1),
      0 2px 12px hsl(var(--gold) / 0.1);
  }

  .track-pattern {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    color: hsl(var(--bronze));
    pointer-events: none;
  }

  .toggle-indicator {
    position: absolute;
    left: 4px;
    top: 50%;
    transform: translateY(-50%);
    width: 132px;
    height: 40px;
    background: linear-gradient(
      135deg,
      hsl(var(--gold) / 0.5),
      hsl(var(--gold) / 0.3)
    );
    border-radius: 2rem;
    transition: all 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    box-shadow:
      0 4px 16px hsl(var(--gold) / 0.25),
      0 2px 8px hsl(var(--gold) / 0.15),
      inset 0 1px 2px rgba(255, 255, 255, 0.2),
      inset 0 -1px 2px rgba(0, 0, 0, 0.05);
    backdrop-filter: blur(12px);
    z-index: 1;
  }

  /* Subtle shimmer effect */
  .toggle-indicator::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 2rem;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.3) 0%,
      rgba(255, 255, 255, 0) 50%,
      rgba(255, 255, 255, 0.05) 100%
    );
    opacity: 0.5;
  }

  .mode-toggle.personal-mode .toggle-indicator {
    left: calc(100% - 136px);
    background: linear-gradient(
      135deg,
      hsl(var(--burnt-sienna) / 0.5),
      hsl(var(--burnt-sienna) / 0.3)
    );
    box-shadow:
      0 4px 16px hsl(var(--burnt-sienna) / 0.25),
      0 2px 8px hsl(var(--burnt-sienna) / 0.15),
      inset 0 1px 2px rgba(255, 255, 255, 0.2),
      inset 0 -1px 2px rgba(0, 0, 0, 0.05);
  }

  .toggle-option {
    position: absolute;
    top: 0;
    height: 100%;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    background: none;
    border: none;
    cursor: pointer;
    font-family: 'Cormorant Garamond Variable', serif;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    color: hsl(var(--foreground) / 0.4);
    transition: all 0.4s ease;
    z-index: 2;
    padding: 0 1rem;
  }

  .toggle-professional {
    left: 0;
  }

  .toggle-personal {
    right: 0;
  }

  .toggle-option:hover {
    color: hsl(var(--foreground) / 0.7);
  }

  .toggle-option.active {
    color: hsl(var(--foreground));
    font-weight: 600;
  }

  .option-icon {
    font-size: 1rem;
    opacity: 0.6;
    transition: all 0.4s ease;
  }

  .toggle-option.active .option-icon {
    opacity: 1;
    transform: scale(1.1);
  }

  .option-label {
    transition: all 0.4s ease;
  }

  .toggle-option.active .option-label {
    text-shadow: 0 0 12px hsl(var(--gold) / 0.3);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .toggle-track {
      width: 240px;
      height: 44px;
    }

    .toggle-indicator {
      width: 112px;
      height: 36px;
    }

    .mode-toggle.personal-mode .toggle-indicator {
      left: calc(100% - 116px);
    }

    .toggle-option {
      font-size: 0.8rem;
      gap: 0.25rem;
    }

    .option-icon {
      font-size: 0.9rem;
    }
  }

  /* Dark mode adjustments */
  :global(.dark) .toggle-track {
    background: linear-gradient(
      135deg,
      hsl(var(--background)),
      hsl(var(--muted) / 0.2)
    );
    border-color: hsl(var(--gold) / 0.2);
  }

  :global(.dark) .track-pattern {
    opacity: 0.6;
  }
</style>
