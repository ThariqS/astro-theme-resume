---
interface Props {
	class?: string
	variant?: 'star' | 'mandala' | 'simple'
}

const { class: className = '', variant = 'star', ...rest } = Astro.props
---

<div class={`flex items-center justify-center ${className}`} {...rest}>
	{
		variant === 'star' && (
			<svg
				width='80'
				height='80'
				viewBox='0 0 100 100'
				class='text-gold opacity-40'
				xmlns='http://www.w3.org/2000/svg'
			>
				<g fill='currentColor'>
					{/* 8-point star pattern */}
					<path d='M50 10 L55 40 L70 20 L60 45 L90 30 L65 50 L90 70 L60 55 L70 80 L55 60 L50 90 L45 60 L30 80 L40 55 L10 70 L35 50 L10 30 L40 45 L30 20 L45 40 Z' />
					<circle cx='50' cy='50' r='8' fill='hsl(var(--background))' />
					<circle cx='50' cy='50' r='4' fill='currentColor' />
				</g>
			</svg>
		)
	}
	{
		variant === 'mandala' && (
			<svg
				width='80'
				height='80'
				viewBox='0 0 100 100'
				class='animate-rotate-gentle text-bronze opacity-40'
				xmlns='http://www.w3.org/2000/svg'
			>
				<g fill='none' stroke='currentColor' stroke-width='1'>
					<circle cx='50' cy='50' r='40' />
					<circle cx='50' cy='50' r='30' />
					<circle cx='50' cy='50' r='20' />
					<circle cx='50' cy='50' r='10' />
					{/* Radial lines */}
					{Array.from({ length: 8 }).map((_, i) => {
						const angle = (i * 45 * Math.PI) / 180
						const x1 = 50 + Math.cos(angle) * 10
						const y1 = 50 + Math.sin(angle) * 10
						const x2 = 50 + Math.cos(angle) * 40
						const y2 = 50 + Math.sin(angle) * 40
						return <line x1={x1} y1={y1} x2={x2} y2={y2} />
					})}
				</g>
				<circle cx='50' cy='50' r='3' fill='currentColor' />
			</svg>
		)
	}
	{
		variant === 'simple' && (
			<div class='flex items-center gap-4'>
				<div class='h-px w-16 bg-gradient-to-r from-transparent to-gold' />
				<svg width='20' height='20' viewBox='0 0 20 20' class='text-gold'>
					<circle cx='10' cy='10' r='2' fill='currentColor' />
					<circle cx='10' cy='10' r='6' fill='none' stroke='currentColor' stroke-width='0.5' />
				</svg>
				<div class='h-px w-16 bg-gradient-to-l from-transparent to-gold' />
			</div>
		)
	}
</div>
