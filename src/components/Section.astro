---
import { cn } from '@/utils'

const { class: className, title, ...rest } = Astro.props
---

<section class={cn(className, 'flex flex-col gap-y-5 md:flex-row md:gap-y-0')} {...rest}>
	<div class='md:w-1/5'>
		<h2 class='font-cormorant text-2xl font-semibold'>{title}</h2>
	</div>
	<div class='flex flex-col gap-y-3 md:w-2/3'>
		<slot />
	</div>
</section>
