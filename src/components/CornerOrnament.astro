---
interface Props {
	class?: string
	position?: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right' | 'all'
	color?: 'gold' | 'bronze' | 'foreground'
}

const { class: className = '', position = 'all', color = 'gold' } = Astro.props

const colorClass = {
	gold: 'text-gold',
	bronze: 'text-bronze',
	foreground: 'text-foreground'
}[color]
---

<div class={`pointer-events-none ${className}`}>
	{
		(position === 'all' || position === 'top-left') && (
			<div class='absolute top-2 left-2'>
				<svg width='24' height='24' viewBox='0 0 24 24' class={colorClass} opacity='0.4'>
					<path
						d='M2 2 L8 2 L2 8 Z M2 2 L4 4 L2 6 Z'
						fill='currentColor'
						stroke='currentColor'
						stroke-width='0.5'
					/>
					<circle cx='6' cy='6' r='1' fill='currentColor' />
				</svg>
			</div>
		)
	}
	{
		(position === 'all' || position === 'top-right') && (
			<div class='absolute top-2 right-2 rotate-90'>
				<svg width='24' height='24' viewBox='0 0 24 24' class={colorClass} opacity='0.4'>
					<path
						d='M2 2 L8 2 L2 8 Z M2 2 L4 4 L2 6 Z'
						fill='currentColor'
						stroke='currentColor'
						stroke-width='0.5'
					/>
					<circle cx='6' cy='6' r='1' fill='currentColor' />
				</svg>
			</div>
		)
	}
	{
		(position === 'all' || position === 'bottom-left') && (
			<div class='absolute bottom-2 left-2 -rotate-90'>
				<svg width='24' height='24' viewBox='0 0 24 24' class={colorClass} opacity='0.4'>
					<path
						d='M2 2 L8 2 L2 8 Z M2 2 L4 4 L2 6 Z'
						fill='currentColor'
						stroke='currentColor'
						stroke-width='0.5'
					/>
					<circle cx='6' cy='6' r='1' fill='currentColor' />
				</svg>
			</div>
		)
	}
	{
		(position === 'all' || position === 'bottom-right') && (
			<div class='absolute bottom-2 right-2 rotate-180'>
				<svg width='24' height='24' viewBox='0 0 24 24' class={colorClass} opacity='0.4'>
					<path
						d='M2 2 L8 2 L2 8 Z M2 2 L4 4 L2 6 Z'
						fill='currentColor'
						stroke='currentColor'
						stroke-width='0.5'
					/>
					<circle cx='6' cy='6' r='1' fill='currentColor' />
				</svg>
			</div>
		)
	}
</div>
